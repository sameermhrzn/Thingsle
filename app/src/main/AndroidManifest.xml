<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thingsle.sameer.thingsle">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".app.ListCitiesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.SplashActivity"
            android:label="Thingsle"
            android:theme="@style/NoActionBarTheme"></activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDyLgwmh7lTfgbLMFExnrZYWi_yfaY5v_o" />

        <activity
            android:name=".app.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"></activity>
        <activity
            android:name=".app.MainActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".app.MapActivity"
            android:label="@string/title_activity_map"></activity>
        <activity
            android:name=".app.SearchActivity"
            android:label="Countries List">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".app.AddCountry"
            android:label="Add Countries"></activity>
        <activity
            android:name=".app.AddCity"
            android:label="@string/title_activity_add_city"></activity>
        <activity
            android:name=".app.AddPlaces"
            android:label="add places"></activity>

        <activity

            android:name=".app.ListCountriesActivity"
            android:label="@string/title_activity_list_cities"></activity>
        <activity

        android:name=".app.ListPlacesActivity"
        android:label="List places"></activity>
</application>

</manifest>
