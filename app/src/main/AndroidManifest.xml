        <activity
            android:name=".app.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer" />
        <activity
            android:name=".app.MainActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".app.MapActivity"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".app.SearchActivity"
            android:label="Countries List" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".app.AddCountry"
            android:label="Add Countries" />
        <activity
            android:name=".app.AddCity"
            android:label="@string/title_activity_add_city" />
        <activity
            android:name=".app.AddPlaces"
            android:label="add places" />
        <activity
            android:name=".app.ListCitiesActivity"
            android:label="@string/title_activity_list_cities" />
        <activity
            android:name=".app.ListPlacesActivity"
