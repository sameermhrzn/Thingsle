<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thingsle.sameer.thingsle.app.AddCity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/txt_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Name of city"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/txt_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txt_city_name"
            android:hint="Longitude"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/black" />

      <EditText
            android:id="@+id/txt_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_longitude"
            android:layout_marginTop="8dp"
            android:hint="Latitude"
            android:inputType="text"
            android:lines="2"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/black" />

        <EditText
           android:id="@+id/txt_rating"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/txt_latitude"
           android:layout_marginTop="8dp"
           android:hint="rating"
           android:inputType="textEmailAddress"
           android:textAppearance="?android:attr/textAppearance"
           android:textColor="@android:color/black" />

         <EditText
             android:id="@+id/txt_things_to"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/txt_rating"
             android:layout_marginTop="8dp"
             android:hint="Things to do"
             android:inputType="phone"
             android:textAppearance="?android:attr/textAppearance"
             android:textColor="@android:color/black" />

         <Spinner
             android:id="@+id/spinner_countries"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/txt_things_to"
             android:layout_marginTop="8dp"
             android:prompt="@string/select_a_country"
             android:animateLayoutChanges="true"
             android:spinnerMode="dropdown" />

         <Button
             android:id="@+id/btn_add"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/spinner_countries"
             android:layout_marginTop="12dp"
             android:gravity="center"
             android:paddingBottom="2dp"
             android:paddingLeft="12dp"
             android:paddingRight="12dp"
             android:paddingTop="2dp"
             android:text="Add city"
             android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</ScrollView>
